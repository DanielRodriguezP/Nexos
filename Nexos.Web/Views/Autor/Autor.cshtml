@model Nexos.Transversal.Response.AutorResponse
@{
    ViewBag.Title = "Autor";
}
@section Styles{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@Html.Partial("_Mensaje")

<div class="page-header text-center">
    <h3 class="text-center">Autor</h3>
</div>

<br />
<br />

<form>
    <div class="form-group col-md-4">
        <label for="NombreCompleto">Nombre Completo(*)</label>
        <input type="text" id="NombreCompleto" class="form-control" value="@Html.DisplayFor(model => model.NombreCompleto)" placeholder="Nombre Completo" autofocus required />
    </div>
    <div class="form-group col-md-4">
        <label for="Fecha Nacimiento">Fecha Nacimiento(*)</label>
        <input type="date" id="FechaNacimiento" class="form-control" value="@Html.DisplayFor(model => model.FechaNacimiento.Date)" placeholder="dd/MM/yyyy" required />
    </div>
    <div class="form-group col-md-4">
        <label for="cbxCiudad">Ciudad(*)</label>
        <select id="cbxCiudad" class="form-control" required>
            <option value="">Seleccione un Ciudad</option>
        </select>
    </div>
    <div class="row center-block">
        <div class="form-group col-md-6">
            <label for="Correo">Correo(*)</label>
            <input type="email" id="Correo" class="form-control" value="@Html.DisplayFor(model => model.Correo)" placeholder="Correo" required />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary btn-block" id="btnGuardar" name="guardar_autor" value="Guardar" />
    </div>
</form>
<br />

<table id="tabla" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre Completo</th>
            <th scope="col">Fecha Nacimiento</th>
            <th scope="col">Ciudad</th>
            <th scope="col">Correo</th>
        </tr>
    </thead>
    <tbody>

    <tbody />
</table>

@section Scripts
{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>
}

<script src="~/Scripts/Autor/Autor.js"></script>


